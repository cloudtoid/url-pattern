<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(AppDotNetVersion)</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.*" />
  </ItemGroup>

  <!-- NuGet Packaging -->
  <PropertyGroup>
    <PackageId>Cloudtoid.UrlPattern</PackageId>
    <Title>Cloudtoid.UrlPattern</Title>
    <Authors>pedram@rezaei.us</Authors>
    <Company>cloudtoid</Company>
    <PackageDescription>This is a powerful, yet simple, URL path pattern parser and matcher</PackageDescription>
    <Copyright>Copyright (c) Cloudtoid</Copyright>
    <IsPackable>true</IsPackable>
    <PackageTags>url-pattern,pattern-matching,url-parser,url-parsing,regex,regular-expression,routing</PackageTags>
    <RepositoryUrl>https://github.com/cloudtoid/url-pattern/</RepositoryUrl>
    <PackageProjectUrl>https://github.com/cloudtoid/url-pattern/blob/master/README.md</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <VersionSuffix Condition=" '$(VersionSuffix)'=='' ">0</VersionSuffix>
    <Version>1.0.$(VersionSuffix)</Version>
  </PropertyGroup>

</Project>
